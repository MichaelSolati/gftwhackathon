{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public",
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "declaration": false,
    "removeComments": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "src/**/*"
  ],
}